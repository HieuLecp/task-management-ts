{
    "compilerOptions": {
        // "outDir": "js", // Biên dịch vào thư mục js
        "target": "ES6", // cho phép biên dịch code ts sang kiểu ES6
        "module": "CommonJS", // commonJs là tiêu chuẩn được dùng trong nodeJs để làm việc với các module
        "removeComments": true, // Xoá cmt khi biên dịch sang file js
        "esModuleInterop": true // Dùng được từ khoá import thay require 
    }
}